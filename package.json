{
  "name": "playwright-pilot",
  "version": "1.8.2",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0",
    "bun": ">=1.3.1"
  },
  "scripts": {
    "pretest": "bunx bddgen",
    "test": "playwright test --project=chromium",
    "axe": "playwright test --project=axe",
    "lighthouse": "playwright test --project=lighthouse",
    "ui": "bun run test -- --ui",
    "headed": "bun run test -- --headed",
    "debug": "bun run test -- --debug",
    "failed": "bun run test -- --last-failed",
    "clean": "rm -rf test-output coverage *.log node_modules",
    "pin": "node scripts/pin-versions.mjs",
    "bump": "bunx ncu -u && bun install && bun run pin",
    "audit": "bun audit",
    "prepare": "husky",
    "lint": "bun scripts/lint.mjs",
    "lint:fix": "eslint . --fix",
    "lint:eslint": "eslint .",
    "lint:markdown": "eslint **/*.md",
    "lint:typescript": "tsc --noEmit",
    "lint:shellcheck": "find .husky -maxdepth 1 -type f -print0 | xargs -0 shellcheck"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@cspell/dict-css": "4.0.18",
    "@cspell/dict-de-de": "4.1.2",
    "@cspell/dict-en_us": "4.4.24",
    "@cspell/dict-html": "4.0.12",
    "@cspell/dict-node": "5.0.8",
    "@cspell/dict-npm": "5.2.20",
    "@cspell/dict-software-terms": "5.1.11",
    "@cspell/dict-typescript": "3.2.3",
    "@cspell/eslint-plugin": "9.2.2",
    "@eslint/js": "9.39.0",
    "@eslint/json": "0.14.0",
    "@eslint/markdown": "7.5.1",
    "@html-eslint/eslint-plugin": "0.47.1",
    "@html-eslint/parser": "0.47.1",
    "@playwright/test": "1.56.1",
    "@types/node": "24.10.0",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "axe-playwright": "2.2.2",
    "bun-types": "1.3.1",
    "chrome-launcher": "1.2.1",
    "cspell": "9.2.2",
    "dotenv": "17.2.3",
    "eslint": "9.39.0",
    "eslint-plugin-playwright": "2.3.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-yml": "1.19.0",
    "husky": "9.1.7",
    "lighthouse": "13.0.1",
    "lint-staged": "16.2.6",
    "npm-check-updates": "19.1.2",
    "playwright-bdd": "8.4.1",
    "shellcheck": "4.1.0",
    "ts-node": "10.9.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "description": "AI-Piloted E2E Testing with Playwright & BDD - Complete test automation framework with Page Object Model, accessibility testing, performance audits, and comprehensive code quality tooling",
  "keywords": [
    "playwright",
    "e2e",
    "end-to-end",
    "testing",
    "test-automation",
    "bdd",
    "gherkin",
    "cucumber",
    "playwright-bdd",
    "page-object-model",
    "pom",
    "typescript",
    "accessibility",
    "a11y",
    "axe",
    "lighthouse",
    "performance",
    "ci-cd",
    "github-actions",
    "eslint",
    "prettier",
    "cspell",
    "husky",
    "conventional-commits",
    "bun"
  ],
  "author": {
    "name": "m3au",
    "email": "m3au@pm.me",
    "url": "https://github.com/m3au"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m3au/playwright-pilot.git"
  },
  "homepage": "https://m3au.github.io/playwright-pilot/",
  "bugs": {
    "url": "https://github.com/m3au/playwright-pilot/issues"
  }
}
