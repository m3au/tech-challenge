# ==============================================================================
# Application Configuration
# ==============================================================================

# Base URL for the application under test
BASE_URL=https://www.company.de

# Suppress Node.js warnings
NODE_NO_WARNINGS=1

# ==============================================================================
# Test Execution Configuration
# ==============================================================================

# Global timeout for all Playwright actions (milliseconds)
TIMEOUT=40000

# Timeout for assertions (milliseconds)
EXPECT_TIMEOUT=15000

# Number of parallel test workers (number or percentage like 50%)
# Percentage is calculated based on machine CPU cores
WORKERS=50%

# Number of times to retry failed tests
RETRIES=1

# Number of times to repeat each test (0 = disabled)
REPEAT_EACH=0

# Run tests fully parallel (true or false)
FULLY_PARALLEL=true

# ==============================================================================
# Browser Selection
# ==============================================================================

# Enable/disable Chromium browser tests (true or false)
CHROMIUM_ENABLED=true

# Enable/disable Firefox browser tests (true or false)
FIREFOX_ENABLED=false

# Enable/disable WebKit browser tests (true or false)
WEBKIT_ENABLED=false

# ==============================================================================
# Browser Behavior
# ==============================================================================

# Run tests in headed mode (show browser window) - true or false
HEADED=false

# Slow down operations by specified milliseconds for debugging (0 = disabled)
SLOW_MO=0

# ==============================================================================
# Debugging & Reporting
# ==============================================================================

# Trace mode for debugging (off, on, on-first-retry, retain-on-failure, on-all-retries)
TRACE=on-first-retry

# Screenshot capture mode (off, on, only-on-failure)
SCREENSHOT=only-on-failure

# ==============================================================================
# Audit Test Thresholds
# ==============================================================================

# Lighthouse Performance score threshold (0.0 to 1.0, where 1.0 = 100%)
LIGHTHOUSE_PERFORMANCE_THRESHOLD=0.0

# Lighthouse Accessibility score threshold (0.0 to 1.0)
LIGHTHOUSE_ACCESSIBILITY_THRESHOLD=0.0

# Lighthouse Best Practices score threshold (0.0 to 1.0)
LIGHTHOUSE_BEST_PRACTICES_THRESHOLD=0.0

# Lighthouse SEO score threshold (0.0 to 1.0)
LIGHTHOUSE_SEO_THRESHOLD=0.0

# Maximum allowed accessibility violations for Axe tests
AXE_MAX_VIOLATIONS=0
