# ==============================================================================
# Application Configuration
# ==============================================================================

# Base URL for the application under test
BASE_URL=https://www.company.de/page.html

# Suppress Node.js warnings
NODE_NO_WARNINGS=1

# ==============================================================================
# Test Execution Configuration
# ==============================================================================

# Global timeout for all Playwright actions (milliseconds)
TIMEOUT=40000

# Timeout for assertions (milliseconds)
EXPECT_TIMEOUT=15000

# Number of parallel test workers (number or percentage like 50%)
# Percentage is calculated based on machine CPU cores
WORKERS=10

# Number of times to retry failed tests
RETRIES=1

# Number of times to repeat each test (0 = disabled)
REPEAT_EACH=0

# Run tests fully parallel (true or false)
FULLY_PARALLEL=true

# ==============================================================================
# Browser Selection
# ==============================================================================

# Enable/disable Chromium browser tests (1 = enabled, empty = disabled)
CHROMIUM=1

# Enable/disable Firefox browser tests (1 = enabled, empty = disabled)
FIREFOX=

# Enable/disable WebKit browser tests (1 = enabled, empty = disabled)
WEBKIT=

# ==============================================================================
# Browser Behavior
# ==============================================================================

# Run tests in headed mode (1 = headed, empty = headless)
HEADED=

# Slow down operations by specified milliseconds for debugging (0 = disabled)
SLOW_MO=0

# ==============================================================================
# Debugging & Reporting
# ==============================================================================

# Trace mode for debugging (off, on, on-first-retry, retain-on-failure, on-all-retries)
TRACE=on-first-retry

# Screenshot capture mode (off, on, only-on-failure)
SCREENSHOT=only-on-failure

# ==============================================================================
# Audit Test Thresholds
# ==============================================================================

# Lighthouse Performance score (0 to 1, where 1 = 100%)
LIGHTHOUSE_PERFORMANCE=0

# Lighthouse Accessibility score (0 to 1)
LIGHTHOUSE_ACCESSIBILITY=0

# Lighthouse Best Practices score (0 to 1)
LIGHTHOUSE_BEST_PRACTICES=0

# Lighthouse SEO score (0 to 1)
LIGHTHOUSE_SEO=0

# Lighthouse PWA score (0 to 1)
LIGHTHOUSE_PWA=0

# Maximum allowed accessibility violations for Axe tests
AXE_MAX_VIOLATIONS=999
